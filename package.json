{
  "name": "chalet-le-jar",
  "version": "0.0.0",
  "description": "Welcome friends and friendly people.",
  "scripts": {
    "build:dev": "cd client && npm run build:dev",
    "build:prod": "cd client && npm run build:prod",
    "client:dev": "cd client && npm run start:dev",
    "client:prod": "cd client && npm run start:prod",
    "ncu": "ncu -u && npm i && cd client && ncu -u && npm i && cd ../server && ncu -u && npm i",
    "server:dev": "cd server && npm run start:dev",
    "server:prod": "cd server && npm run start:prod"
  },
  "devDependencies": {
    "mikey-pro": "^6.6.8"
  },
  "homepage": "https://github.com/chiefmikey/chalet-le-jar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiefmikey/chalet-le-jar.git"
  },
  "bugs": {
    "url": "https://github.com/chiefmikey/chalet-le-jar/issues"
  },
  "license": "MIT",
  "keywords": [
    "minecraft",
    "bedrock",
    "server",
    "aws",
    "local"
  ],
  "author": "Mikl Wolfe <wolfe@mikl.io> (https://mikl.io)",
  "prettier": "@mikey-pro/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./client/tsconfig.json",
        "./server/tsconfig.json"
      ]
    },
    "extends": "@mikey-pro/eslint-config"
  },
  "stylelint": {
    "extends": "@mikey-pro/stylelint-config"
  }
}
